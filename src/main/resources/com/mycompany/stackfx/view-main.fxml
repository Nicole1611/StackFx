<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.stackfx.controller.StackController">
    <stylesheets>
        <URL value="@/styles/view-main.css" />
    </stylesheets>
   <children>
      <BorderPane>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" text="STACK" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
                     <VBox.margin>
                        <Insets left="20.0" top="6.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Times New Roman Bold" size="24.0" />
                     </font>
                     <padding>
                        <Insets bottom="2.0" />
                     </padding>
                  </Label>
                  <HBox>
                     <children>
                        <TextField fx:id="txtValue" promptText="Escriba un numero">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Times New Roman" size="12.0" />
                           </font>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#push" text="Insertar">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Times New Roman Bold Italic" size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#pop" text="Eliminar">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Times New Roman Bold Italic" size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#peek" text="Peek">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Times New Roman Bold Italic" size="12.0" />
                           </font></Button>
                        <Button mnemonicParsing="false" onAction="#isEmpty" text="isEmpty">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Times New Roman Bold Italic" size="12.0" />
                           </font>
                        </Button>
                        <Label fx:id="lblStatus" text="Estado">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Times New Roman Italic" size="13.0" />
                           </font>
                           <padding>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets bottom="4.0" top="4.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </top>
         <left>
            <ScrollPane BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </BorderPane.margin>
               <content>
                  <StackPane fx:id="canvasHolder" prefHeight="200.0" prefWidth="500.0" />
               </content>
            </ScrollPane>
         </left>
      </BorderPane>
      <Label layoutX="-76.0" layoutY="-26.0" text="Label" />
   </children>
</AnchorPane>
